{{- $osBase := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "idLike" -}}
{{-   $osBase = .chezmoi.osRelease.idLike -}}
{{- end -}}

{{- $headless := false -}}
{{- $private := false -}}

{{- if eq .chezmoi.username "m1yam0t0" -}}
{{-   $private = true -}}
{{- end -}}

{{- if env "GITHUB_ACTION" -}}
{{-   $headless = true -}}
{{- end -}}

[data]
    osbase = {{ $osBase | quote }}
    headless = {{ $headless }}
    private = {{ $private }}
